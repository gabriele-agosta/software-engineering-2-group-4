generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id                      BigInt   @id @default(autoincrement())
  name                    String
  expected_service_time   String
  tickets                 Ticket[]
}

model Ticket {
  id                      BigInt   @id @default(autoincrement())
  service_id              BigInt
  taken_at                DateTime @default(now())
  estimated_waiting_time  String
  waiting_time            String?   //time in queue
  service_time            String?   //time at the desk
  served                  Boolean  @default(false)
  service                 Service  @relation(fields: [service_id], references: [id])
}